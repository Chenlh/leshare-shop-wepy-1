<template>
  <view class="goods-fav-container" data-goods-id="{{goods.goodsId}}"  catchtap="onGoodsTap">
    <!--商品图片-->
    <image class="goods-item-img" src="{{goods.imageUrl}}" />

    <!--商品信息-->
    <view class="goods-info-container">
      <text class="goods-name">{{goods.goodsName}}</text>
      <text class="goods-price">￥{{goods.goodsPrice}}</text>
    </view>

    <!--操作按钮-->
    <image class="goods-more-img" src="/images/icons/more-dot.png" @tap="tap({{goods.goodsId}})" />
  </view>
  <view class="goods-item-border"></view>
</template>

<script>
  import wepy from 'wepy';
  import Tips from '../../utils/Tips'
  export default class FavoriteItem extends wepy.component {
    props = {
      goods: {}
    };
    methods = {
      tap(goodsId) {
        Tips.actionWithFunc(['查看商品', '取消收藏'],
          () => {
            this.$root.$navigate(`/pages/goods/detail?goodsId=${goodsId}`);
          },
          () => {
            this.$emit('remove', goodsId);
          });
      }
    };
  }
</script>

