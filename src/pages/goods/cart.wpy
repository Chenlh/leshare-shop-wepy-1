<template>
  <view class="container" wx:if="{{init}}">
    <view class="cart-header-container" wx:if="{{cart.carts.length > 0}}">

      <view class="cart-shop-info-container">
        <view class="cart-check-container" @tap="checkAll">
          <view class="zan-icon zan-icon-{{cart.all ? 'checked' : 'check'}}" />
        </view>
        <image class="shop-info-icon" src="/images/icons/shop-gray.png" />
        <text class="shop-info-name">{{shop.name}}</text>
      </view>
      <text class="cart-batch-edit" catchtap="batch"> {{cart.batch ? '完成' : '编辑'}}</text>
    </view>

    <!--占位提示-->
    <view class="cart-empty-tips" wx:if="{{cart.carts.length == 0}}">
      <image src="/images/icons/cart-empty.png" />
      <text>购物车是空的</text>
    </view>

    <!--购物车内容-->
    <view class="item-list-container">
      <repeat for="{{cart.carts}}"  key="index" index="index" item="item">
        <CartItem :cart.sync="item" :index.sync="index"
                  @num.user="num" @check.user="check" @remove.user="remove"/>
      </repeat>

    </view>

    <!--底栏-->
    <view class="cart-bar-container">

      <view class="cart-check-all-container" @tap="checkAll">
        <view class="zan-icon zan-icon-{{cart.all ? 'checked' : 'check'}}" />
        <text>全选</text>
      </view>

      <block wx:if="{{cart.batch}}">
        <view class="cart-batch-btn-container">
          <button class="zan-btn zan-btn--small" catchtap="onBatchFav">加入收藏</button>
          <button class="zan-btn zan-btn--small zan-btn--danger" @tap="batchRemove">删除商品</button>
        </view>
      </block>
      <block wx:else>
        <view class="cart-check-info-container">
          <view class="cart-check-price-container">
            <text>总计：</text>
            <text class="goods-price">￥{{cart.price}}</text>
          </view>
          <text class="cart-check-tips-text">不含运费，已优惠￥0.00</text>
        </view>

        <view class="bar-buy-container {{cart.buy ? '' : 'bar-buy-empty'}}" @tap="buy">
          <text class="text-btn" wx:if="{{cart.buy}}">去结算</text>
          <text class="text-btn" wx:elif="{{!status.open}}">未营业</text>
          <text class="text-btn" wx:else>请选购</text>
          <text class="text-small" wx:if="{{cart.buy}}">({{cart.num}})</text>
        </view>
      </block>

    </view>

  </view>
</template>

<script>
  import wepy from 'wepy';
  import base from '../../mixins/base';
  import order from '../../api/order';
  import auth from '../../api/auth';
  import Cart from '../../utils/Cart';
  import CartItem from '../../components/goods/cart';
  import Cache from '../../utils/Cache';
  import Tips from '../../utils/Tips';

  export default class GoodsCart extends wepy.page {
    def = {
      init: false,
      shop: null,
      status: null
    };
    data = {...this.def};
    cartManager = Cart.create();
    async onLoad (options) {
      this.shop = await Cache.shop();
      this.status = await Cache.status();
      this.loaded();
    };
    methods = {
      // 修改商品数量
      num({componentId, quantity}) {
        this.cartManager.updateNum(componentId, quantity);
      },
      // 选择商品
      check(index) {
        this.cartManager.toggleCartCheck(index);
      },
      // 全部选择
      checkAll() {
        this.cartManager.toggleAllCheck();
      },
      // 批量模式
      batch() {
        this.cartManager.toggleBatch();
      },
      async remove(index) {
        await Tips.confirm('确认删除该商品？');
        this.cartManager.remove(index);
        await Tips.success('删除成功');
        this.$apply();
      },
      // 批量删除
      async batchRemove() {
        await Tips.confirm('确认删除选中商品？');
        this.cartManager.removeChecked();
        await Tips.success('删除成功');
        this.$apply();
      },
      // 购物车结算
      async buy (param = {}) {
        // 权限校验
        const result = await auth.user({block: true, redirect: false});
        if (!result) return;
        // 订单类型
        param.orderType = 10;
        const trade = order.createCartTrade(this.cartManager.carts, param);
        // shop.reportFormId(param.formId);
        this.$preload('trade', trade);
        this.$navigate(`../order/trade`);
      }
    };
    computed = {
      cart() {
        if (this.cartManager === null) {
          return;
        }
        return this.cartManager.export();
      }
    };
    components = {
      CartItem: CartItem
    };
    mixins = [base];
    config = {
      navigationBarTitleText: '订单详情'
    };
  }
</script>


